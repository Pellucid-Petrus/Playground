<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/sidebar"
            android:background="#cb00a8"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="0dp"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:minHeight="70dp">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" N Minutes ago"
                android:id="@+id/ListItemDateTextView"
                android:maxLines="1"
                android:lines="1"
                android:textColor="#87b1ff"
                android:layout_gravity="center"
                android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/ListItemTitleTextView" />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/ListItemTitleTextView"
                android:layout_gravity="center_horizontal|left|top"
                android:maxLines="2"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_margin="3dp"/>



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnyWebsite.org"
                android:id="@+id/ListItemProviderTextView"
                android:maxLines="1"
                android:lines="1"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal|top"
                android:textSize="12sp"
                android:layout_below="@+id/ListItemTitleTextView"
                android:layout_alignLeft="@+id/ListItemTitleTextView"
                android:layout_margin="3dp"/>

    </RelativeLayout>
</LinearLayout>

