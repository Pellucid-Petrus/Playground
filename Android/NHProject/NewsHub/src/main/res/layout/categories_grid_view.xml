<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/category_technology"
            android:id="@+id/button11"
            android:layout_gravity="center"
            android:background="#fb5e2f"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_weight="0.4"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/category_news"
            android:id="@+id/button12"
            android:layout_gravity="center"
            android:background="#cb43a4"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_weight="0.4"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/categories_money"
            android:id="@+id/button13"
            android:layout_gravity="center"
            android:background="#81e047"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_weight="0.5"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/categories_photography"
            android:id="@+id/button22"
            android:layout_gravity="center"
            android:background="#ffc900"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_weight="0.3"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/category_games"
            android:id="@+id/button21"
            android:layout_gravity="center"
            android:background="#ffb58e"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_weight="0.4"
            />


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/categories_fashion"
            android:id="@+id/button11"
            android:layout_gravity="center"
            android:background="#3732fb"
            android:textColor="#bcff36"
            android:textSize="30dp"
            android:layout_weight="0.4"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/category_cooking"
            android:id="@+id/button12"
            android:layout_gravity="center"
            android:background="#cb7e11"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_weight="0.4"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/category_build"
            android:id="@+id/button13"
            android:layout_gravity="center"
            android:background="#e030d3"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_weight="0.5"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/category_cinema"
            android:id="@+id/button21"
            android:layout_gravity="center"
            android:background="#15afc4"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_weight="0.6"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/category_sport"
            android:id="@+id/button22"
            android:layout_gravity="center"
            android:background="#c2e5d2"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_weight="0.4"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="@string/categoty_search"
            android:id="@+id/button23"
            android:layout_gravity="center"
            android:background="#ed3c59"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_weight="0.2"
            />
    </LinearLayout>
</LinearLayout>