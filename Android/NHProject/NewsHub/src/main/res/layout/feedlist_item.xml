<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:padding="0dp"
    style="@style/DrawerListItem">

    <ImageView
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:id="@+id/sidebar"
        android:background="#ffc90f"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"

        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitle"
            android:id="@+id/FeedListItemTitleTextView"
            android:layout_gravity="center"
            android:maxLines="1"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/imageView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desc"
            android:id="@+id/FeedListItemDescTextView"
            android:maxLines="1"
            android:lines="1"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center_horizontal|top"
            android:textSize="12sp"
            android:layout_below="@+id/FeedListItemTitleTextView"
            android:layout_toLeftOf="@+id/imageView2"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_action_news"
            android:layout_below="@+id/FeedListItemTitleTextView"
            android:layout_alignRight="@+id/FeedListItemTitleTextView"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
</LinearLayout>
