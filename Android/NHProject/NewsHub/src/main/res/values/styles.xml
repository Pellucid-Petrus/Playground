<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!--- MAIN ACTIVITY -->
    <style name="MainFragmentBackground" parent="AppBaseTheme">
        <item name="android:background">@android:color/white</item>
    </style>



    <!-- DRAWER -->
    <style name="Drawer" parent="AppBaseTheme">
        <item name="android:background">@drawable/drawer_bg</item>
    </style>

    <style name="DrawerList" parent="AppBaseTheme">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="DrawerListItem" parent="AppBaseTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerButton" parent="AppBaseTheme">
        <item name="android:background">@drawable/drawer_button</item>
    </style>

    <!--- ARTICLE DETAIL -->

    <style name="ArticleListFrame" parent="AppBaseTheme">
        <item name="android:background">@drawable/frame</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="ArticleDetailFrame" parent="AppBaseTheme">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="ArticleListFrameLogo" parent="AppBaseTheme">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingBottom">150dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>
    <style name="ArticleDetailFrameLoading" parent="AppBaseTheme">
        <item name="android:background">#aaffffff</item>
    </style>
    <style name="ArticleDetailFrameEmpty" parent="AppBaseTheme">
        <item name="android:background">#ffffff</item>
    </style>
    <style name="ArticleDetailHeadline" parent="AppBaseTheme">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ArticleContentText" parent="AppBaseTheme">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="ArticleDetailTitle" parent="AppBaseTheme">
        <!--<item name="android:background">#CC4CDDED</item>-->
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- ARTICLE BUTTONS -->
    <style name="ArticleDetailOpenLinkButton" parent="AppBaseTheme">
        <item name="android:background">@drawable/openlink_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ArticleDetailShareLinkButton" parent="AppBaseTheme">
        <item name="android:background">@drawable/sharelink_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="PreviousArticleButton" parent="AppBaseTheme">
        <item name="android:background">@drawable/previousarticle_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="NextArticleButton" parent="AppBaseTheme">
        <item name="android:background">@drawable/nextarticle_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="ArticleDetailMoreButton" parent="AppBaseTheme">
        <item name="android:background">@drawable/more_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ArticleButtonsContainer">
        <item name="android:background">@drawable/articlebuttonsframe</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>


</resources>
