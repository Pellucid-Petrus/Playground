<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
 <padding android:top="10dp" android:right="10dp" android:bottom="10dp" android:left="10dp" />
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
            <solid android:color="#00CCCCCC" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
            <solid android:color="#10CCCCCC" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
            <solid android:color="#20CCCCCC" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="3dp" android:right="3dp" android:bottom="3dp" android:left="3dp" />
            <solid android:color="#30CCCCCC" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <gradient
                    android:startColor="#ffffffff"
                    android:endColor="#ffe0e0e0"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#ff817e7c" />
            <corners
                    android:radius="4dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />

        </shape>
    </item>
</layer-list>