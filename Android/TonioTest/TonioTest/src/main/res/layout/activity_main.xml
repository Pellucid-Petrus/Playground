<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" android:orientation="horizontal">

    <fragment android:layout_width="0dp"
              android:layout_height="match_parent"
              android:name="com.example.toniotest.MyListFragment" android:id="@+id/listFragment"
              android:layout_gravity="center_horizontal|top" tools:layout="@layout/list_fragment"
              android:layout_weight="1"/>
    <fragment android:layout_width="0dp"
              android:layout_height="match_parent"
              android:name="com.example.toniotest.DetailFragment" android:id="@+id/detailFragment"
              android:layout_centerVertical="true" android:layout_alignRight="@+id/listView" android:layout_weight="3"
              tools:layout="@layout/detail_fragment"/>


</LinearLayout>
