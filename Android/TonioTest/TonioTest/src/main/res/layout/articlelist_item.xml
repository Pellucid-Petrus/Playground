<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="70dp"
              android:padding="3dp"
        >

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:src="@drawable/square_light"
            android:padding="4dp"
            />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:paddingRight="10dp">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/ListItemTitleTextView"
                android:layout_gravity="center"
                android:maxLines="2"
                android:textSize="16sp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnyWebsite.org"
                android:id="@+id/ListItemProviderTextView"
                android:maxLines="1"
                android:lines="1"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal|top"
                android:textSize="12sp"
                android:layout_alignTop="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" N Minutes ago"
                android:id="@+id/ListItemDateTextView"
                android:maxLines="1"
                android:lines="1"
                android:textColor="#ff8688"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="12sp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_toLeftOf="@+id/imageView2"
                />

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_action_alarm_2"
                android:layout_below="@+id/ListItemProviderTextView"
                android:layout_alignRight="@+id/ListItemTitleTextView"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_action_news"
                android:layout_below="@+id/ListItemTitleTextView"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
    </RelativeLayout>
</LinearLayout>