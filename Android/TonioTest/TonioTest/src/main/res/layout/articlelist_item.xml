<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:padding="5dp"
        >

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/square_light"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="2dp"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/ListItemTitleTextView"
            android:layout_gravity="center_horizontal|top"
            android:maxLines="2"
            android:textSize="16sp"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnyWebsite.org"
            android:id="@+id/ListItemProviderTextView"
            android:maxLines="1"
            android:lines="1"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center_horizontal|top"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/ListItemDateTextView"
            android:layout_alignBottom="@+id/ListItemDateTextView"
            android:layout_alignLeft="@+id/ListItemTitleTextView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" N Minutes ago"
            android:id="@+id/ListItemDateTextView"
            android:maxLines="1"
            android:lines="1"
            android:textColor="#87b1ff"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="12sp"
            android:layout_below="@+id/ListItemTitleTextView"
            android:layout_alignRight="@+id/ListItemTitleTextView"/>

</RelativeLayout>
