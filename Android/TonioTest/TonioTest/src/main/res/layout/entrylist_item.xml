<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="70dp"
              android:padding="3dp"
        >

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:src="@drawable/square_light"
            android:padding="4dp"
            />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:paddingRight="10dp">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/ListItemTitleTextView"
                android:layout_gravity="center"
                android:maxLines="2"
                android:textSize="15sp"
                />
        <TextView
                style="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/ListItemSeparatorTextView"
                android:maxLines="1"
                android:lines="1"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="12sp"
                android:layout_below="@+id/ListItemTitleTextView"
                android:layout_toLeftOf="@+id/ListItemDateTextView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnyWebsite.org"
                android:id="@+id/ListItemProviderTextView"
                android:maxLines="1"
                android:lines="1"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal|top"
                android:textSize="12sp"
                android:layout_below="@+id/ListItemTitleTextView"
                android:layout_toLeftOf="@+id/ListItemSeparatorTextView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" N Minutes ago"
                android:id="@+id/ListItemDateTextView"
                android:maxLines="1"
                android:lines="1"
                android:textColor="#ff8688"
                android:layout_gravity="center_horizontal|bottom"
                android:textSize="12sp"
                android:layout_below="@+id/ListItemTitleTextView"
                android:layout_alignRight="@+id/ListItemTitleTextView"/>
    </RelativeLayout>
</LinearLayout>