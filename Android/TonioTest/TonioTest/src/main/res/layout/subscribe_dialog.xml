<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:id="@+id/subscribe_editText" android:layout_gravity="left|center_vertical"
            android:layout_margin="0dp"
            android:layout_centerHorizontal="true"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subscribe_listView" android:layout_gravity="center" android:headerDividersEnabled="true"
            android:layout_below="@+id/subscribe_editText"
            android:layout_alignParentLeft="true"/>

</RelativeLayout>